<!--pages/rec/rec.wxml-->
<camera device-position="{{cameraChangeTag}}" hidden="{{hiddenTag}}" flash="off" binderror="error" style="width: 100%; height: 300px;">
     <cover-view class="hintTxt">
        相机预览区域
      </cover-view>
</camera>
<video src="{{vedioSrc}}" id="myVideo" hidden="{{!hiddenTag}}"></video>

<button type="primary" bindtap="openVedio">开启小窗口视频录制</button>
<button type="primary" bindtap="stopVedio">关闭小窗口视频录制</button>
<button type="primary" bindtap="changeDevicePosition">切换前置或后置摄像头</button>

<audio poster="{{poster}}" name="{{name}}" author="{{author}}" src="{{src}}" id="myAudio" controls loop></audio>

<button type="primary" bindtap="takePhoto">拍照</button>
<button type="primary" bindtap="openPhotoAlbum">相册</button>
<view>预览图片</view>
<image mode="widthFix" src="{{src}}"></image>


